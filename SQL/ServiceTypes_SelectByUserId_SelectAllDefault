ALTER PROC [dbo].[ServiceTypes_SelectByUserId_SelectAllDefault] @UserId int
								
/* ----- Test Code -----

DECLARE @UserId int = 30

EXECUTE [dbo].[ServiceTypes_SelectByUserId_SelectAllDefault] @UserId

*/

as

BEGIN
			SELECT [Id]
				  ,[Name]
			FROM [dbo].[ServiceTypes]
			WHERE IsDefaultValue = 1
			UNION
			SELECT [Id]
			      ,[Name]
			FROM [dbo].[ServiceTypes]
			WHERE UserId = @UserId

			ORDER BY Id

END
